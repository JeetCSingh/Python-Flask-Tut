{% extends "layout.html" %}
{% block body %}

        <!-- Page content-->
        <div><center>
            <div>
                <div class="col-lg-8">
                    <!-- Post content-->
                    <article>
                        <!-- Post header-->
                        <header class="mb-4">
                            <!-- Post title-->
                            <h1 class="fw-bolder mb-1">Welcome to Blog Contact!</h1>
                            <!-- Post meta content-->
                            <div class="text-muted fst-italic mb-2">Posted on Nov 11, 2022 by Jeet Classes</div>
                            <!-- Post categories-->
                         
                        </header>
                        <!-- Preview image figure-->
                        <figure class="mb-4"><img class="img-fluid rounded" src="https://dummyimage.com/900x400/ced4da/6c757d.jpg" alt="..." /></figure>
						</center>
                        <!-- Post content-->
						<form action="/contact" method="Post">
							<div class="form-group">
								<label for="formGroupExampleInput">Name</label>
								<input type="text" class="form-control" id="formGroupExampleInput" placeholder="Enter a name" name="title">
							</div>
							 <div class="form-group">
								<label for="formGroupExampleInput2">Email Address</label>
								<input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Enter email" name="email">
							 </div>
							 <div class="form-group">
								<label for="formGroupExampleInput2">Phone Number</label>
								<input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Enter phone number" name="phone">
							 </div>
							 <div class="form-group">
								<label for="formGroupExampleInput2">Message</label>
								<input type="textarea" rows="3" class="form-control" id="formGroupExampleInput2" placeholder="Enter message" name="msg">
							 </div>
							 <hr>
							 <div>
								<center><button class="btn btn-primary" type="submit">Submit</button></center>
							 </div>
						
						</form>
                        
                    </article>
                    <!-- Comments section-->
                   
                </div>
                
                    
                </div>
            </div>
        </div>

{% endblock %}
